<% if p('pxc_enabled') == true %>
check process galera-init
  with pidfile /var/vcap/sys/run/pxc_ctl/pxc_ctl.pid
  start program "/var/vcap/jobs/mysql-clustered/bin/pxc_ctl start" with timeout <%= p('startup_timeout') %> seconds
  stop program "/var/vcap/jobs/mysql-clustered/bin/pxc_ctl stop"
  group vcap

check process galera-healthcheck
  with pidfile /var/vcap/sys/run/galera-healthcheck/galera-healthcheck.pid
  start program "/var/vcap/jobs/mysql-clustered/bin/galera-healthcheck_ctl start" with timeout 60 seconds
  stop program "/var/vcap/jobs/mysql-clustered/bin/galera-healthcheck_ctl stop" with timeout 10 seconds
  group vcap
<% end %>
