---

<%
def discover_external_ip
     networks = spec.networks.marshal_dump
     _, network = networks.find do |_name, network_spec|
       network_spec.default
     end
     if !network
       _, network = networks.first
     end
     if !network
       raise "Could not determine IP via network spec: #{networks}"
     end
     network.ip
   end
%>

<%
  cluster_ips = link('mysql').instances.map(&:address)

  if_link('arbitrator') do
    cluster_ips += link('arbitrator').instances.map(&:address)
  end
%>

LogFileLocation: /var/vcap/sys/log/mysql/galera-init.log
PidFile: /var/vcap/sys/run/pxc_ctl/pxc_ctl.pid
ChildPidFile: /var/vcap/sys/run/mysql/mysql.pid
Db:
  UpgradePath: /var/vcap/packages/pxc/bin/mysql_upgrade
  User: <%= p('admin_username')%>
  Password: <%= p('admin_password')%>
  PreseededDatabases:
  <% p("seeded_databases").each do |seed| %>
  - DBName: <%= seed["name"] %>
    User: <%= seed["username"]%>
    Password: <%= seed["password"] %>
  <% end %>
  PostStartSQLFiles:
  - /var/vcap/jobs/mysql/config/galera_healthcheck_setup.sql
  Socket: /var/vcap/sys/run/mysql/mysqld.sock
Upgrader:
  PackageVersionFile: /var/vcap/packages/pxc/VERSION
  LastUpgradedVersionFile: /var/vcap/store/mysql/mysql_upgrade_info
Manager:
  StateFileLocation: /var/vcap/store/mysql/state.txt
  ClusterIps:
  <% cluster_ips.each do |ip| %>
  - <%= ip %>
  <% end %>
  BootstrapNode: <%= spec.bootstrap %>
  ClusterProbeTimeout: <%= p('cluster_probe_timeout') %>
